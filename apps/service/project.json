{
  "name": "@proveo/tutoring-service",
  "projectType": "application",
  "root": "apps/service",
  "sourceRoot": "apps/service/app",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uvicorn app.main:app --reload --port 8800",
        "cwd": "{projectRoot}"
      }
    },

    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pytest -q",
        "cwd": "{projectRoot}"
      }
    },

    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ruff check .",
        "cwd": "{projectRoot}"
      }
    },

    "build": {
      "executor": "nx:run-commands",
      "outputs": ["dist/apps/service"],
      "options": {
        "command": "python -m pip install . --target dist/apps/service",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["type:backend", "lang:python"]
}
